---
import HeaderLayout from "./HeaderLayout.astro"
import Menu from "../components/Menu.astro";

const { title, docs } = Astro.props;
---
<style>
.header-menu-layout__main {
  display: flex;
  flex-direction: row;
  gap: 0;
  min-height: 80vh;
  background: #f8fafc;
  border-radius: 18px;
  box-shadow: 0 2px 16px 0 rgba(0,0,0,0.04);
  margin: 0 auto;
  max-width: 1200px;
}
.header-menu-layout__menu {
  width: 260px;
  min-width: 180px;
  background: #fff;
  border-radius: 18px 0 0 18px;
  border-right: 1.5px solid #e5e7eb;
  padding: 0 0 0 0;
  overflow-y: auto;
  box-sizing: border-box;
}
.header-menu-layout__content {
  flex: 1 1 0%;
  background: #fff;
  border-radius: 0 18px 18px 0;
  padding: 36px 40px 36px 40px;
  min-width: 0;
  box-sizing: border-box;
}
@media (max-width: 900px) {
  .header-menu-layout__main {
    flex-direction: column;
    box-shadow: none;
    border-radius: 0;
    max-width: 100vw;
  }
  .header-menu-layout__menu {
    width: 100vw;
    min-width: 0;
    border-radius: 18px 18px 0 0;
    border-right: none;
    border-bottom: 1.5px solid #e5e7eb;
    max-height: 220px;
    padding: 0 0 0 0;
  }
  .header-menu-layout__content {
    border-radius: 0 0 18px 18px;
    padding: 24px 8px 24px 8px;
  }
}
@media (max-width: 600px) {
  .header-menu-layout__main {
    flex-direction: column;
    max-width: 100vw;
  }
  .header-menu-layout__menu {
    display: none;
  }
  .header-menu-layout__content {
    padding: 12px 2vw 12px 2vw;
    border-radius: 0;
  }
}
</style>

<HeaderLayout title={title}>
  <main class="header-menu-layout__main">
    <section class="header-menu-layout__menu">
      <Menu docs={docs} />
    </section>
    <section class="header-menu-layout__content">
      <slot />
    </section>
  </main>
</HeaderLayout>