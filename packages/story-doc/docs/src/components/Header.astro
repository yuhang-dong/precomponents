---
import { parseSectionsFromEntries } from "../utils/storybookEntriesUtils";

const mode = await import("virtual:storybook-index")
const indexEndpoint = mode.value;
const sections = parseSectionsFromEntries(indexEndpoint.entries);

// 获取当前section
let currentSection = '';
if (typeof Astro !== 'undefined' && Astro.url) {
  // Astro 3.x
  const pathParts = Astro.url.pathname.split('/').filter(Boolean);
  currentSection = pathParts[0] || '';
}
---
<style>
:root {
  --header-bg: #f8fafc;
  --header-bg-dark: #181c24;
  --header-shadow: 0 2px 16px 0 rgba(0,0,0,0.06);
  --header-radius: 18px;
  --header-height: 64px;
  --color-main: #3b82f6;
  --color-main-grad: linear-gradient(90deg, #3b82f6 0%, #6366f1 100%);
  --color-nav-hover: #6366f1;
  --color-nav-active: #3b82f6;
  --color-text: #222;
  --color-text-dark: #fff;
}
.header__container {
  position: sticky;
  top: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: var(--header-height);
  background: var(--header-bg);
  box-shadow: var(--header-shadow);
  border-radius: var(--header-radius);
  margin: 16px auto 24px auto;
  padding: 0 32px;
  max-width: 1200px;
  transition: background 0.3s;
}
.header__logo {
  font-size: 2rem;
  font-weight: 800;
  letter-spacing: 0.04em;
  background: var(--color-main-grad);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}
.header__navs {
  display: flex;
  gap: 32px;
  margin: 0 32px;
}
.header__navs__nav {
  font-size: 1.1rem;
  font-weight: 500;
  color: var(--color-text);
  cursor: pointer;
  position: relative;
  transition: color 0.2s;
  text-decoration: none;
}
.header__navs__nav:hover::after {
  content: '';
  position: absolute;
  left: 0; right: 0; bottom: -4px;
  height: 3px;
  border-radius: 2px;
  background: var(--color-main-grad);
  opacity: 0.7;
}
.header__navs__nav:hover {
  color: var(--color-nav-hover);
}
.header__navs__nav--active {
  color: var(--color-main);
  font-weight: 700;
}
.header__navs__nav--active::after {
  content: '';
  position: absolute;
  left: 0; right: 0; bottom: -4px;
  height: 3px;
  border-radius: 2px;
  background: var(--color-main-grad);
  opacity: 1;
}
.header__actions {
  display: flex;
  align-items: center;
  gap: 18px;
}
.header__search {
  display: flex;
  align-items: center;
  background: #f1f5f9;
  border-radius: 999px;
  padding: 4px 12px;
  min-width: 120px;
  transition: box-shadow 0.2s;
  box-shadow: 0 1px 4px 0 rgba(60,60,60,0.04);
}
.header__search input {
  border: none;
  background: transparent;
  outline: none;
  font-size: 1rem;
  margin-left: 6px;
  color: var(--color-text);
  width: 80px;
}
.header__search svg {
  width: 18px;
  height: 18px;
  color: #64748b;
}
.header__icon-btn {
  background: #e0e7ef;
  border: none;
  border-radius: 50%;
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: background 0.2s, transform 0.3s;
  font-size: 1.2rem;
}
.header__icon-btn:hover {
  background: #c7d2fe;
  transform: rotate(20deg);
}
.header__github {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  transition: background 0.2s;
  cursor: pointer;
}
.header__github:hover {
  background: #e0e7ef;
}
.header__github svg {
  width: 22px;
  height: 22px;
  color: #222;
  transition: color 0.2s;
}
.header__github:hover svg {
  color: var(--color-main);
}
/* 响应式 */
@media (max-width: 800px) {
  .header__container {
    padding: 0 12px;
  }
  .header__navs {
    gap: 16px;
    margin: 0 8px;
  }
}
@media (max-width: 600px) {
  .header__container {
    flex-wrap: wrap;
    height: auto;
    padding: 8px 4px;
  }
  .header__navs {
    display: none;
  }
  .header__menu-btn {
    display: flex;
  }
}
.header__menu-btn {
  display: none;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  background: #e0e7ef;
  cursor: pointer;
  margin-left: 8px;
}
.header__menu-btn svg {
  width: 24px;
  height: 24px;
}
</style>

<header class="header__container">
  <div class="header__logo">Story Doc</div>
  <div class="header__navs" id="header-navs">
    {sections.map((section) => (
      <a
        href={`/${section.toLocaleLowerCase()}`}
        class="header__navs__nav"
        data-section={section.toLocaleLowerCase()}
      >
        {section}
      </a>
    ))}
  </div>
  <div class="header__menu-btn" title="菜单">
    <svg viewBox="0 0 24 24" fill="none"><rect x="4" y="6" width="16" height="2" rx="1" fill="#64748b"/><rect x="4" y="11" width="16" height="2" rx="1" fill="#64748b"/><rect x="4" y="16" width="16" height="2" rx="1" fill="#64748b"/></svg>
  </div>
  <div class="header__actions">
    <div class="header__search">
      <svg viewBox="0 0 20 20" fill="none"><circle cx="9" cy="9" r="7" stroke="#64748b" stroke-width="2"/><path d="M15.5 15.5L13 13" stroke="#64748b" stroke-width="2" stroke-linecap="round"/></svg>
      <input type="text" placeholder="搜索" />
    </div>
    <button class="header__icon-btn" title="切换主题">
      <svg viewBox="0 0 24 24" fill="none"><circle cx="12" cy="12" r="5" stroke="#6366f1" stroke-width="2"/><path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42" stroke="#6366f1" stroke-width="2" stroke-linecap="round"/></svg>
    </button>
    <a class="header__github" href="https://github.com/" target="_blank" title="Github">
      <svg viewBox="0 0 24 24" fill="none"><path d="M12 2C6.48 2 2 6.58 2 12.26c0 4.48 2.87 8.28 6.84 9.63.5.09.68-.22.68-.48 0-.24-.01-.87-.01-1.7-2.78.62-3.37-1.36-3.37-1.36-.45-1.18-1.1-1.5-1.1-1.5-.9-.63.07-.62.07-.62 1 .07 1.53 1.05 1.53 1.05.89 1.56 2.34 1.11 2.91.85.09-.66.35-1.11.63-1.37-2.22-.26-4.56-1.14-4.56-5.07 0-1.12.39-2.03 1.03-2.75-.1-.26-.45-1.3.1-2.7 0 0 .84-.28 2.75 1.05A9.38 9.38 0 0 1 12 6.8c.85.004 1.71.12 2.51.35 1.91-1.33 2.75-1.05 2.75-1.05.55 1.4.2 2.44.1 2.7.64.72 1.03 1.63 1.03 2.75 0 3.94-2.34 4.8-4.57 5.06.36.32.68.94.68 1.9 0 1.37-.01 2.47-.01 2.8 0 .26.18.57.69.48A10.01 10.01 0 0 0 22 12.26C22 6.58 17.52 2 12 2Z" fill="currentColor"/></svg>
    </a>
  </div>
</header>

<script is:inline>
  // 前端动态高亮
  const navs = document.querySelectorAll('.header__navs__nav');
  const currentSection = window.location.pathname.split('/').filter(Boolean)[0] || '';
  navs.forEach(nav => {
    if (nav.dataset.section === currentSection) {
      nav.classList.add('header__navs__nav--active');
    } else {
      nav.classList.remove('header__navs__nav--active');
    }
  });
</script>