---
import { parseMenuNavigatorFromDocs } from "../utils/storybookEntriesUtils";
import MenuNode from "./MenuNode.astro";

const { docs } = Astro.props;
const menuTree = parseMenuNavigatorFromDocs(docs);


// 获取当前section名
let section = '';
if (docs && docs.length > 0) {
  section = docs[0].title.includes('/') ? docs[0].title.split('/')[0].toLocaleLowerCase() : 'home';
} else {
  throw new Error('No docs provided to Menu component');
}
---
<style>
.menu__container {
  padding: 24px 0 0 0;
  font-family: 'Inter', 'Roboto', 'Arial', sans-serif;
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 2px 16px 0 rgba(0,0,0,0.04);
  max-width: 320px;
  min-width: 220px;
}
@media (max-width: 800px) {
  .menu__container {
    min-width: 120px;
    max-width: 100vw;
    padding: 8px 0 0 0;
  }
}
</style>

<div class="menu__container">
  {menuTree.map((item) => (
    <MenuNode item={item} level={0} section={section} />
  ))}
</div>