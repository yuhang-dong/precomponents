{
  "compilerOptions": {
    "target": "ES2020",                  // 支持 import.meta.url 等现代特性
    "module": "ESNext",                  // 输出 ESM，以支持 astro 等模块
    "outDir": "dist",                    // 编译后的输出目录
    "rootDir": "src",                    // 源码目录
    "moduleResolution": "bundler",       // TypeScript 5+ 推荐的解析方式
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,             // 兼容 CJS 包，比如 http-proxy-middleware
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "emitDeclarationOnly": true,         // ✅ 只输出类型，不生成 JS
    "declaration": true,                 // ✅ 启用类型声明输出
    "declarationDir": "dist",            // ✅ 类型声明输出目录
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "docs"]
}
